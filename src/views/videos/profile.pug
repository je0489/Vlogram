extends ../base
include ../mixins/video

block content
    div.profile__data
        if !user.avatarUrl
            i.fas.fa-user-circle
        else 
            if user.socialOnly && user.avatarUrl.substr(0, 4) === "http"
                img.avatar(src = user.avatarUrl)
            else 
                img.avatar(src = "/" + user.avatarUrl)
        div.user
            h3.userID=user.id
            h3=user.name
    include ../partials/videoGrid